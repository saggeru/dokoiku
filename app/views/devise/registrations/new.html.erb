<div class='registration-main'>
  <div class='side-left'>
    <div class='side-left-cnt'>
      <span>ドコイク</span>
      <br>新規登録
    </div>
  </div>

  <div class='side-right'>

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    
    <div class='side-right-form'>
      <div class='form-text-wrap'>
        <label class='form-text'>ユーザーアイコン</label>
        <span class='required-item'>必須</span>
        <div class='img-up-wrap'>
          <label class='img-up'>ここをクリックして画像をアップロード！
          <input type='file' class='hidden'>
          </label>
        </div>
      </div>
    </div>
    
    <div class='side-right-form'>
      <div class='form-text-wrap'>
        <label class='form-text'>ニックネーム</label>
        <span class='required-item'>必須</span>
      </div>
    </div>
    <%= f.text_field :name, placeholder: "例: DOKOIKU 太郎", class: 'user-form', maxlength: "30", autofocus: true %>
    
    <div class='side-right-form'>
      <div class='form-text-wrap'>
        <label class='form-text'>ユーザーID</label>
        <span class='required-item'>必須</span>
      </div>
    </div>
    <%= f.text_field :dokoiku_name, placeholder: "例: dokoiku", class: 'user-form', maxlength: "30" %>
    
    <div class='side-right-form'>
      <div class='form-text-wrap'>
        <label class='form-text'>メールアドレス</label>
        <span class='required-item'>必須</span>
      </div>
    </div>
    <%= f.email_field :email, placeholder: "携帯・PC どちらでも可", class: 'user-form', maxlength: "30" %>
    
    <div class='side-right-form'>
      <div class='form-text-wrap'>
        <label class='form-text'>パスワード</label>
        <span class='required-item'>必須</span>
      </div>
    </div>
    <%= f.password_field :password, placeholder: "8文字以上の半角英数字", class: 'user-form', maxlength: "30" %>
    
    <div class='side-right-form'>
      <div class='form-text-wrap'>
        <label class='form-text'>パスワード (確認)</label>
        <span class='required-item'>必須</span>
      </div>
    </div>
    <%= f.password_field :password_confirmation, placeholder: "確認のため同じパスワードを入力してください", class: 'user-form', maxlength: "30" %>

    <div class='registration-btn'>
      <%= f.submit "会員登録" ,class:"registration-red-btn" %>
    </div>
  </div>
  <% end %>
</div>

<%= render "shared/footer" %>