<div class='registration-main'>
  <div class='side-left-login'>
    
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

    <div class='side-left-form'>
      <div class='form-text-wrap'>
        <label for='user_email' class='form-text'>メールアドレス</label>
      </div>
    </div>
    <%= f.email_field :email, class: 'user-form', autofocus: true %>
    
    <div class='side-left-form'>
      <div class='form-text-wrap'>
        <label for='user_password' class='form-text'>パスワード</label>
      </div>
    </div>
    <%= f.password_field :password, class: 'user-form', autofocus: true %>

    <div class='login-btn'>
      <%= f.submit 'ログイン', class:"login-red-btn", autofocus: true %>
    </div>
    <div class='user-entry'>
      <%= link_to 'アカウントをお持ちでない方', new_user_registration_path, class: 'user-entry-btn' %>
    </div>
  </div>
  <% end %>

  <div class='side-right-login'>
    <div class='side-right-cnt'>
      <span>ドコイク</span>
      <br>ログイン
    </div>
  </div>
</div>

<%= render "shared/footer" %>